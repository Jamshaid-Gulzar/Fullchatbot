    <script>
        function testWidget() {
            const results = document.getElementById('test-results');
            let html = '<h3 style="margin-top: 20px;">Test Results:</h3>';
            
            // Check if widget loaded
            if (window.N8nChatWidgetLoaded) {
                html += '<div class="status success">‚úÖ Widget loaded successfully from CDN</div>';
            } else {
                html += '<div class="status error">‚ùå Widget not loaded (may need cache purge or wait 2-3 minutes)</div>';
            }
            
            // Check configuration
            if (window.ChatWidgetConfig) {
                html += '<div class="status success">‚úÖ Configuration found</div>';
            } else {
                html += '<div class="status error">‚ùå Configuration not found</div>';
            }
            
            // Check UI elements
            const launcher = document.querySelector('.chat-launcher');
            if (launcher) {
                html += '<div class="status success">‚úÖ Chat launcher button found</div>';
            } else {
                html += '<div class="status error">‚ùå Chat launcher button NOT found</div>';
            }
            
            const chatWindow = document.querySelector('.chat-window');
            if (chatWindow) {
                html += '<div class="status success">‚úÖ Chat window found</div>';
            } else {
                html += '<div class="status error">‚ùå Chat window NOT found</div>';
            }
            
            // Overall status
            if (window.N8nChatWidgetLoaded && launcher && chatWindow) {
                html += '<div class="status success" style="margin-top: 16px; font-size: 18px; font-weight: 600;">üéâ Everything is working perfectly!</div>';
            } else {
                html += '<div class="status warning" style="margin-top: 16px;">‚ö†Ô∏è If widget didn\'t load, try purging the CDN cache and wait 2-3 minutes.</div>';
            }
            
            results.innerHTML = html;
        }
        
        function openChat() {
            const launcher = document.querySelector('.chat-launcher');
            if (launcher) {
                launcher.click();
                alert('‚úÖ Chat widget opened!');
            } else {
                alert('‚ùå Widget not loaded yet. Try purging cache or wait a few minutes.');
            }
        }
        
        function purgeCDN() {
            const status = document.getElementById('test-results');
            status.innerHTML = '<div class="status warning">üîÑ Purging jsDelivr cache...</div>';
            
            fetch('https://purge.jsdelivr.net/gh/Jamshaid-Gulzar/Fullchatbot@main/Fullchatbot')
                .then(r => r.json())
                .then(data => {
                    status.innerHTML += '<div class="status success">‚úÖ Cache purged successfully!</div>';
                    status.innerHTML += '<div class="status warning">‚è≥ Wait 30 seconds, then refresh this page.</div>';
                    setTimeout(() => {
                        status.innerHTML += '<div class="status success">‚úÖ You can refresh now!</div>';
                    }, 30000);
                })
                .catch(err => {
                    status.innerHTML += '<div class="status error">‚ùå Purge failed: ' + err.message + '</div>';
                });
        }
        
        // Auto-test after load
        window.addEventListener('load', () => {
            setTimeout(testWidget, 2000);
        });
        
        // Log CDN loading
        console.log('üîç Testing CDN: https://cdn.jsdelivr.net/gh/Jamshaid-Gulzar/Fullchatbot@main/Fullchatbot');
    </script>

